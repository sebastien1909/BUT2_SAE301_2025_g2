<%- include("header") %>
<link rel="stylesheet" href="/CSS/confirmation.css">

<div class="page_confirmation">
  <div class="card_confirmation">
    <div class="icone_succes">✓</div>
    
    <h1>Paiement réussi !</h1>
    
    <p class="message"><%= message %></p>
    
    <p class="info">Vous recevrez un email de confirmation à l'adresse associée à votre compte.</p>
    
    <div class="actions">
      <a href="/co" class="btn_profil">Voir mes réservations</a>
      <a href="/catalogue_produit" class="btn_continuer">Continuer mes achats</a>
      <a href="/" class="btn_accueil">Retour à l'accueil</a>
    </div>
  </div>
</div>

<style>
.page_confirmation {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 2rem;
}

.card_confirmation {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  padding: 3rem;
  text-align: center;
  max-width: 500px;
  width: 100%;
}

.icone_succes {
  width: 80px;
  height: 80px;
  background: #28a745;
  color: white;
  font-size: 3rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem;
}

.card_confirmation h1 {
  color: #28a745;
  margin-bottom: 1rem;
}

.message {
  font-size: 1.1rem;
  margin-bottom: 1rem;
}

.info {
  color: #666;
  margin-bottom: 2rem;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.actions a {
  padding: 0.8rem 1.5rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s;
}

.btn_profil {
  background: #C89F5D;
  color: white;
}

.btn_profil:hover {
  background: #B38F4D;
}

.btn_continuer {
  background: #333;
  color: white;
}

.btn_continuer:hover {
  background: #555;
}

.btn_accueil {
  background: transparent;
  color: #C89F5D;
  border: 2px solid #C89F5D;
}

.btn_accueil:hover {
  background: #C89F5D;
  color: white;
}
</style>

<%- include("footer") %>