<%- include("header") %>
<div class="background-ins">
    <div class="card-inscrip">
        <h1>Inscription</h1>
        <form action="/inscription_infos" method="POST">
            <p>Nom</p>
            <input type="text" name="nom" placeholder="   Nom*">
            <p>Prénom</p>
            <input type="text" name="prenom" placeholder="   Prénom*">
            <p>Date de naissance</p>
            <input type="age" name="age"placeholder="   0000-00-00*">
            <p>Email</p>
            <input type="email" name="mail" placeholder="   Email*">
            <p>Nom d'utilisateur</p>
            <input type="text" name="login" placeholder="   Nom d'utilisateur*">
            <p>Mot de passe</p>
            <input type="password" name="mdp" placeholder="   Mot de passe*">
            <div class="conditions">
                <p>**1 Majuscule obligatoire</p>
                <p>**1 Caractère spécial obligatoire</p>
                <p>**1 chiffre obligatoire</p>
            </div>
            <p>Confirmer le mot de passe</p>
            <input type="password" name="mdp_confirm" placeholder="   Confirmer le mot de passe*">
            <div class="box">
                <div class="check">
                    <input type="checkbox" id="conditions générales" name="conditions_générales" checked />
                    <label for="conditions générales">J'accepte les conditions générales d'utilisation</label>
                </div>
                <div class="check">
                    <input type="checkbox" id="recevoir_mail" name="recevoir_mail" />
                    <label for="mail">Je souhaite recevoir les mails de nouveautés</label>
                </div>
            </div>
            <br>
            <div class="submit">
                <button type="submit">S'inscrire</button>
                <h2>ou</h2>
                <div class="autres-moyens">
                    <i class="fa-brands fa-google fa-xl" style="color: #ffffff;"></i>
                    <i class="fa-brands fa-facebook fa-xl" style="color: #ffffff;"></i>
                    <i class="fa-brands fa-apple fa-xl" style="color: #ffffff;"></i>
                </div>
            </div>
        </form>
    </div>
</div>
