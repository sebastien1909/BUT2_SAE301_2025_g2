<div class="ajout-produit-container">
        <form action="/ajouter-agent" method="POST">

            <div class="form-group">
                <label for="username">username</label>
                <input type="text" name="username" id="username" placeholder="Veuillez entrer le username de l'agent"></input>
            </div>

            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" name="nom" id="nom" placeholder="Veuillez entrer le nom de l'agent"></input>
            </div>

            <div class="form-group">
                <label for="prenom">Prénom</label>
                <input type="text" name="prenom" id="prenom" placeholder="Veuillez entrer le prenom de l'agent">
            </div>

            <div class="form-group">
                <label for="ddn">Date de naissance</label>
                <input type="date" name="ddn" id="ddn" required>
            </div>

            <div class="form-group">
                <label for="mdp">Mot de Passe</label>
                <input type="text" name="mdp" id="mdp" placeholder="Définissez le mot de passe de l'agent">
            </div>

            <div class="form-group">
                <label for="mail">email</label>
                <input type="text" name="mail" id="mail" placeholder="Définissez l'adresse mail de l'agent">
            </div>

            <div class="ajout_supp">
                <button type="submit">Ajouter l'agent</button>
            </div>
        </form>
    </div>
  </div>
